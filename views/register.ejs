<% include partials/header %>
<div class="container">
	<h1 class="text-center mt-3">
		Create your Account
	</h1>
	<div class="row">
		<div class="col-8 mt-3 mx-auto">
			<form action="/register" method="POST">
				<label for="firstName">First Name</label>
				<div class="form-group">
					<input class="form-control" type="text" id="firstName" name="firstName" placeholder="Ray" required>	
				</div>
				
				<label for="lastName">Last Name</label>
				<div class="form-group">
					<input class="form-control" type="text" id="lastName" name="lastName" placeholder="Stinger" required>
				</div>
				
				<label for="email">Email</label>
				<div class="form-group">
					<input class="form-control" type="email" id="email" name="username" placeholder="info@raymind.me" required>
				</div>
				
				<label for="password">Password</label>
				<div class="form-group">
					<input class="form-control" type="password" id="password" name="password" required>
				</div>
				<button class="btn btn-lg btn-primary btn-block">
					Register
				</button>
				<a class="btn btn-lg btn-outline-success btn-block" href="/login">
					Returning User?
				</a>
			</form>
		</div>
	</div>
</div>
<% include partials/footer %>